{
  "name": "monolitik",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "_config/*",
    "backend/*",
    "frontend/*",
    "linters/*"
  ],
  "scripts": {
    "prepare": "is-ci || husky install .github/husky",
    "build": "turbo run build",
    "test": "turbo run test",
