    "a-d": "yarn workspace admin-dashboard",
    "ui": "yarn workspace ui-kit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "eslint-config-base": "*",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "prettier": "^2.7.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
