{
  "name": "monolitik",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "_config/*",
    "backend/*",
    "frontend/*",
    "linters/*",
    "blockchain"
  ],
  "scripts": {
    "prepare": "is-ci || husky install .github/husky",
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "db": "yarn workspace db",
    "api": "yarn workspace api",
    "common": "yarn workspace common",
    "blockchain": "yarn workspace blockchain",
    "landing": "yarn workspace landing",
    "dashboard": "yarn workspace dashboard",
    "marketplace": "yarn workspace marketplace",
    "ui": "yarn workspace ui-kit",
    "backend:build": "yarn db build && yarn api build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "eslint-config-base": "*",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "prettier": "^2.7.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}